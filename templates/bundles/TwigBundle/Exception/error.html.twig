{% extends 'base.html.twig' %}

{% block body %}
<div class="grid min-h-full grid-cols-1 grid-rows-[1fr,auto,1fr] bg-white lg:grid-cols-[max(50%,36rem),1fr]">
  <header class="mx-auto w-full max-w-7xl px-6 pt-6 sm:pt-10 lg:col-span-2 lg:col-start-1 lg:row-start-1 lg:px-8">
    <a href="/">
      <span class="sr-only">State of Flow</span>
      <img class="h-10 w-auto sm:h-12" src="{{ asset('img/sof_logo.png')}}" alt="State of Flow's logo">
    </a>
  </header>
  <main class="mx-auto w-full max-w-7xl px-6 py-24 sm:py-32 lg:col-span-2 lg:col-start-1 lg:row-start-2 lg:px-8">
    <div class="max-w-lg">
      <p class="text-base font-semibold leading-8 text-red-600">Error</p>
      <h1 class="mt-4 text-3xl font-bold tracking-tight text-gray-900 sm:text-5xl">Oups...</h1>
      <p class="mt-6 text-base leading-7 text-gray-600">Something weird happened. Might happen again.</p>
      <div class="mt-10">
        <a href="{{ path('dashboard') }}" class="text-sm font-semibold leading-7 text-red-600"><span aria-hidden="true">&larr;</span> Back to home</a>
      </div>
    </div>
  </main>
  <div class="hidden lg:relative lg:col-start-2 lg:row-start-1 lg:row-end-4 lg:block">
    <img src="{{ asset('img/error.jpeg')}}" alt="" class="absolute inset-0 h-full w-full object-cover">
  </div>
</div>

{% endblock %}