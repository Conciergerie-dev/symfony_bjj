{% extends "base.html.twig" %}

{% block title %}Videos Dashboard
{% endblock %}

{% block body %}
    <div class="px-4 sm:px-6 lg:px-8">
        <div class="sm:flex sm:items-center">
			<div class="sm:flex-auto">
				<h1 class="text-base font-semibold leading-6 text-gray-900">Techniques</h1>
				<p class="mt-2 text-sm text-gray-700">Your videos.</p>
			</div>
			<div class="mt-4 sm:ml-16 sm:mt-0 sm:flex-none">
				<a href="{{ path('add_video') }}" class="block rounded-md bg-blue-950 px-3 py-2 text-center text-sm font-semibold text-white shadow-sm hover:bg-blue-700 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-950">Add Video</a>
			</div>
		</div>
		<div class="mt-8 flow-root">
			<div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
				<div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
				    <div class="overflow-hidden shadow ring-1 ring-black ring-opacity-5 sm:rounded-lg">
                        <table class="min-w-full divide-y divide-gray-300">
							<thead class="bg-gray-50">
                                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">
                                    Name
                                </th>
                                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">
                                    Thumbnail
                                </th>
                                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">
                                    Position
                                </th>
                                <th scope="col" class="px-5 py-3.5 text-left text-sm font-semibold text-gray-900">
                                    Instructor
                                </th>
                                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900"
                                    >Date
                                </th>
                                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900"
                                    >Type
                                </th>
                                <th scope="col" class="px-3 py-3.5 pr-8 text-right text-sm font-semibold text-gray-900">
                                    Actions
                                </th>
                            </thead>
                            <tbody>
                                <ul>
                                {% for video in videos %}
                                    <tr>
                                        <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">{{ video.name }}</td>
                                        <td class="whitespace-nowrap px-3 py-4">
                                            <img src="{{ asset('uploads/thumbnails/' ~ video.thumbnail) }}" alt="Thumbnail" class="w-20 h-auto rounded-lg">
                                        </td>
                                        <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">{{ video.basePosition }}
                                            to
                                            {{ video.endingPosition }}</td>
                                        <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">{{ video.instructor.name }}</td>    
                                        <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">{{ video.date|date('d/m/Y') }}</td>
                                        <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">{{ video.free ? 'Free' : 'Paid' }}</td>
                                        <td class="relative whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-6">
                                            <a href="{{ path('app_video_show', {'id': video.id}) }}" class="text-blue-950 hover:text-blue-900">Show<span class="sr-only">,
                                                    {{ video.name }}</span>
                                            </a>
                                            <a href="{{ path('app_video_edit', {'id': video.id}) }}" class="text-blue-950 hover:text-blue-900">Edit<span class="sr-only">,
                                                    {{ video.name }}</span>
                                            </a>
                                        </td>
                                    </tr>
                                {% endfor %}
                                <ul>
                            </tbody>
                        </table>
                    </div>
			    </div>
		    </div>
	    </div>
    </div>
{% endblock %}

