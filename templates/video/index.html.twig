{% extends 'base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block body %}
    {% if form is defined %}
    {{ form_start(form) }}
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-3 xl:grid-cols-3 gap-3 my-8">
      <div>
        <label for="basePosition" class="block text-sm font-medium leading-6 text-gray-900">Starting Position</label>
        <select
          name="{{ field_name(form.basePosition) }}"
          class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-red-600 sm:text-sm sm:leading-6"
        >
          <option value="">All</option>
          {% for label, value in field_choices(form.basePosition) %}
          {% if value == criteria['basePosition'] %}
          <option selected value="{{ value }}">{{ label }}</option>
          {% else %}
          <option value="{{ value }}">{{ label }}</option>
          {% endif %}
          {% endfor %}
        </select>
      </div>
      <div>
        <label for="endingPosition" class="block text-sm font-medium leading-6 text-gray-900">Ending Position</label>
        <select
          name="{{ field_name(form.endingPosition) }}"
          class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-red-600 sm:text-sm sm:leading-6"
        >
          <option value="">All</option>
          {% for label, value in field_choices(form.endingPosition) %}
          {% if value == criteria['endingPosition'] %}
          <option selected value="{{ value }}">{{ label }}</option>
          {% else %}
          <option value="{{ value }}">{{ label }}</option>
          {% endif %}
          {% endfor %}
        </select>
      </div>
      <div class="flex items-end justify-end">
        <button type="submit" class="rounded-md bg-red-600 px-2.5 py-1.5 text-sm font-semibold text-white shadow-sm hover:bg-red-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">Search</button>
      </div>
    </div>
    {{ form_end(form) }}
    {% endif %}
    <ul role="list" class="grid grid-cols-2 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-4 gap-x-4 gap-y-8">
      {% for video in videos %}
      <li class="relative">
        <div class="group aspect-h-7 aspect-w-10 block w-full overflow-hidden rounded-lg bg-gray-100 focus-within:ring-2 focus-within:ring-red-500 focus-within:ring-offset-2 focus-within:ring-offset-gray-100">
          <img src="{{ asset('uploads/thumbnails/' ~ video.thumbnail) }}" alt="" class="pointer-events-none object-cover group-hover:opacity-75">
          <a href="{{ path('app_video_show', {'id': video.id}) }}" class="absolute inset-0 focus:outline-none">
            <span class="sr-only">View details for {{ video.name }}</span>
          </a>
        </div>
        <p class="pointer-events-none mt-2 block truncate text-sm font-medium text-gray-900">{{ video.name }}</p>
        <p class="pointer-events-none block text-sm font-medium text-gray-500">{{ video.description|length > 120 ? video.description|slice(0, 120) ~ '...' : video.description }}</p>
      </li>
      {% endfor %}
    </ul>
{% endblock %}
