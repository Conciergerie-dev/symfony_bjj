{% extends 'base.html.twig' %}

{% block title %}Admin Panel
{% endblock %}

{% block body %}
	<div class="bg-white py-16 sm:py-20">
		<div class="mx-auto max-w-7xl px-6 lg:px-8">
			<div class="mx-auto max-w-2xl text-center">
				<h2 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">Welcome to the admin panel</h2>
				<p class="mt-2 text-lg leading-8 text-gray-600">Handle here all the program administration.</p>
			</div>
			<div class="mx-auto mt-16 grid max-w-2xl auto-rows-fr grid-cols-1 gap-8 sm:mt-20 lg:mx-0 lg:max-w-none lg:grid-cols-3">
				<article class="relative isolate flex flex-col justify-end overflow-hidden rounded-2xl bg-gray-900 px-8 pb-8 pt-80 sm:pt-48 lg:pt-80">
					<img src="{{ asset('img/videos.jpeg')}}" alt="" class="absolute inset-0 -z-10 h-full w-full object-cover">
					<div class="absolute inset-0 -z-10 bg-gradient-to-t from-gray-900 via-gray-900/40"></div>
					<div class="absolute inset-0 -z-10 rounded-2xl ring-1 ring-inset ring-gray-900/10"></div>
					<h3 class="mt-3 text-lg font-semibold leading-6 text-white">
						<a href="{{ path('app_video_index') }}">
							<span class="absolute inset-0"></span>
							Videos
						</a>
					</h3>
				</article>
				{% if is_granted('ROLE_ADMIN') %}
					<article class="relative isolate flex flex-col justify-end overflow-hidden rounded-2xl bg-gray-900 px-8 pb-8 pt-80 sm:pt-48 lg:pt-80">
						<img src="{{ asset('img/users.png')}}" alt="" class="absolute inset-0 -z-10 h-full w-full object-cover">
						<div class="absolute inset-0 -z-10 bg-gradient-to-t from-gray-900 via-gray-900/40"></div>
						<div class="absolute inset-0 -z-10 rounded-2xl ring-1 ring-inset ring-gray-900/10"></div>
						<h3 class="mt-3 text-lg font-semibold leading-6 text-white">
							<a href="{{ path('app_user_index') }}">
								<span class="absolute inset-0"></span>
								Users
							</a>
						</h3>
					</article>

					<article class="relative isolate flex flex-col justify-end overflow-hidden rounded-2xl bg-gray-900 px-8 pb-8 pt-80 sm:pt-48 lg:pt-80">
						<img src="{{ asset('img/playlists.jpeg')}}" alt="" class="absolute inset-0 -z-10 h-full w-full object-cover">
						<div class="absolute inset-0 -z-10 bg-gradient-to-t from-gray-900 via-gray-900/40"></div>
						<div class="absolute inset-0 -z-10 rounded-2xl ring-1 ring-inset ring-gray-900/10"></div>
						<h3 class="mt-3 text-lg font-semibold leading-6 text-white">
							<a href="{{ path('app_playlist_index') }}">
								<span class="absolute inset-0"></span>
								Playlists
							</a>
						</h3>
					</article>
					<article class="relative isolate flex flex-col justify-end overflow-hidden rounded-2xl bg-gray-900 px-8 pb-8 pt-80 sm:pt-48 lg:pt-80">
						<img src="{{ asset('img/self.jpeg')}}" alt="" class="absolute inset-0 -z-10 h-full w-full object-cover">
						<div class="absolute inset-0 -z-10 bg-gradient-to-t from-gray-900 via-gray-900/40"></div>
						<div class="absolute inset-0 -z-10 rounded-2xl ring-1 ring-inset ring-gray-900/10"></div>
						<h3 class="mt-3 text-lg font-semibold leading-6 text-white">
							<a href="{{ path('app_other_video_index') }}">
								<span class="absolute inset-0"></span>
								Other Videos
							</a>
						</h3>
					</article>
				{% endif %}
			</div>
		</div>
	</div>
{% endblock %}
