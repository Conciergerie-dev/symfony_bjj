{% extends 'base.html.twig' %}

{% block title %}Admin Panel
{% endblock %}

{% block body %}
	<div class="bg-white py-16 sm:py-20">
		<div class="px-4 sm:px-6 lg:px-8">
			<div class="mx-auto max-w-2xl text-center">
				<h2 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">Welcome to the admin panel</h2>
				<p class="mt-2 mb-6 text-lg leading-8 text-gray-600">Handle here all the program administration.</p>
			</div>
			<div class="grid grid-cols-1 gap-y-8 sm:grid-cols-2 md:grid-cols-4 lg:grid-cols-4 xl:grid-cols-4 gap-x-4 gap-y-8">
				<article class="group aspect-h-7 aspect-w-10 block w-full overflow-hidden rounded-lg bg-gray-100 focus-within:ring-2 focus-within:ring-red-500 focus-within:ring-offset-2 focus-within:ring-offset-gray-100">
					<img src="{{ asset('img/videos.jpeg')}}" alt="" class="pointer-events-none object-cover group-hover:opacity-75">
					<div class="absolute inset-0 -z-10 bg-gradient-to-t from-gray-900 via-gray-900/40"></div>
					<div class="absolute inset-0 -z-10 rounded-2xl ring-1 ring-inset ring-gray-900/10"></div>
					<h3 class="mt-3 text-lg font-semibold leading-6 text-white">
						<a href="{{ path('app_video_index') }}">
							<span class="absolute inset-0"></span>
							Techniques
						</a>
					</h3>
				</article>
				{% if is_granted('ROLE_ADMIN') %}
					<article class="group aspect-h-7 aspect-w-10 block w-full overflow-hidden rounded-lg bg-gray-100 focus-within:ring-2 focus-within:ring-red-500 focus-within:ring-offset-2 focus-within:ring-offset-gray-100">
						<img src="{{ asset('img/users.png')}}" alt="" class="pointer-events-none object-cover group-hover:opacity-75">
						<div class="absolute inset-0 -z-10 bg-gradient-to-t from-gray-900 via-gray-900/40"></div>
						<div class="absolute inset-0 -z-10 rounded-2xl ring-1 ring-inset ring-gray-900/10"></div>
						<h3 class="mt-3 text-lg font-semibold leading-6 text-white">
							<a href="{{ path('app_user_index') }}">
								<span class="absolute inset-0"></span>
								Users
							</a>
						</h3>
					</article>

					<article class="group aspect-h-7 aspect-w-10 block w-full overflow-hidden rounded-lg bg-gray-100 focus-within:ring-2 focus-within:ring-red-500 focus-within:ring-offset-2 focus-within:ring-offset-gray-100">
						<img src="{{ asset('img/playlists.jpeg')}}" alt="" class="pointer-events-none object-cover group-hover:opacity-75">
						<div class="absolute inset-0 -z-10 bg-gradient-to-t from-gray-900 via-gray-900/40"></div>
						<div class="absolute inset-0 -z-10 rounded-2xl ring-1 ring-inset ring-gray-900/10"></div>
						<h3 class="mt-3 text-lg font-semibold leading-6 text-white">
							<a href="{{ path('app_playlist_index') }}">
								<span class="absolute inset-0"></span>
								Playlists
							</a>
						</h3>
					</article>
					<article class="group aspect-h-7 aspect-w-10 block w-full overflow-hidden rounded-lg bg-gray-100 focus-within:ring-2 focus-within:ring-red-500 focus-within:ring-offset-2 focus-within:ring-offset-gray-100">
						<img src="{{ asset('img/self.jpeg')}}" alt="" class="pointer-events-none object-cover group-hover:opacity-75">
						<div class="absolute inset-0 -z-10 bg-gradient-to-t from-gray-900 via-gray-900/40"></div>
						<div class="absolute inset-0 -z-10 rounded-2xl ring-1 ring-inset ring-gray-900/10"></div>
						<h3 class="mt-3 text-lg font-semibold leading-6 text-white">
							<a href="{{ path('app_other_video_index') }}">
								<span class="absolute inset-0"></span>
								Other Videos
							</a>
						</h3>
					</article>
				{% endif %}
			</div>
		</div>
	</div>
{% endblock %}
