{% extends 'base.html.twig' %}

{% block title %}{{ create ? 'Register' : 'My Profile' }}{% endblock %}

{% block body %}
<div class="px-4 sm:px-6 lg:px-8">
  <div class="px-4 sm:px-0">
    <h3 class="text-base font-semibold leading-7 text-gray-900">{{ create ? 'Register an User' : 'Modify my Profile' }}</h3>
    <p class="mt-1 max-w-2xl text-sm leading-6 text-gray-500">Personal details and informations.</p>
  </div>
  <div class="mt-6 border-t border-gray-100">
  {{ form_start(registrationForm) }}
    <dl class="divide-y divide-gray-100">
      <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
        <dt class="text-sm font-medium leading-6 text-gray-900">Email</dt>
        <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0">
            <input
                name="{{ field_name(registrationForm.email) }}"
                value="{{ field_value(registrationForm.email) }}"
                class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-red-600 sm:text-sm sm:leading-6"
            />
        </dd>
      </div>
      <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
        <dt class="text-sm font-medium leading-6 text-gray-900">Name</dt>
        <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0">
            <input
                name="{{ field_name(registrationForm.name) }}"
                value="{{ field_value(registrationForm.name) }}"
                class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-red-600 sm:text-sm sm:leading-6"
            />
        </dd>
      </div>
      {% if is_granted('ROLE_ADMIN') %}
      <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
        <dt class="text-sm font-medium leading-6 text-gray-900">Belt</dt>
        <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0">
            <select
                name="{{ field_name(registrationForm.belt) }}"
                class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-red-600 sm:text-sm sm:leading-6"
            >
            {% for label, value in field_choices(registrationForm.belt) %}
                <option value="{{ value }}">{{ label }}</option>
            {% endfor %}
            </select>
        </dd>
      </div>
      {% else %}
      <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
        <dt class="text-sm font-medium leading-6 text-gray-900">Belt</dt>
        <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0">
            <select
                disabled
                name="{{ field_name(registrationForm.belt) }}"
                class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-red-600 sm:text-sm sm:leading-6"
            >
            {% for label, value in field_choices(registrationForm.belt) %}
                <option value="{{ value }}">{{ label }}</option>
            {% endfor %}
            </select>
        </dd>
      </div>
      {% endif %}
      {% if registrationForm.plainPassword is defined %}
      <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
        <dt class="text-sm font-medium leading-6 text-gray-900">Password</dt>
        <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0">
        <input
            name="{{ field_name(registrationForm.plainPassword) }}"
            value="{{ field_value(registrationForm.plainPassword) }}"
            class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-red-600 sm:text-sm sm:leading-6"
        />
        </dd>
      </div>
      {% endif %}
    </dl>
    <div class="relative whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-6">
        <button type="submit" class="rounded-md bg-red-600 px-3 py-2 text-center text-sm font-semibold text-white shadow-sm hover:bg-red-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-red-600">{{ create ? 'Create' : 'Edit' }}</button>
        <a href="{{ path('app_user_index') }}" class="rounded-md bg-red-600 px-3 py-2 text-center text-sm font-semibold text-white shadow-sm hover:bg-red-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-red-600">Back to list</a>
    </div>
  {{ form_end(registrationForm) }}
  </div>
</div>
{% endblock %}
