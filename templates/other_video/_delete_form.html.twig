    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ video.id) }}">
    <button class="rounded-md bg-blue-950 px-3 py-2 text-center text-sm font-semibold text-white shadow-sm hover:bg-blue-700 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-950">Delete</button>
</form>
