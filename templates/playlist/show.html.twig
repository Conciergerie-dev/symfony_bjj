{% extends 'base.html.twig' %}

{% block title %}Playlist{% endblock %}

{% block body %}
<div class="p-8">
    <h2 class="text-lg font-semibold">{{ playlist.name  }}</h2>
    <p class="text-sm text-gray-500"> {{ playlist.description }}</p>
    <ul role="list" class="divide-y divide-gray-100">
        {% for video in playlist.videos %}
            <a href="{{ path('app_video_show', {'id': video.id}) }} "> 
                <li class="relative flex justify-between py-5">
                    <div class="flex gap-x-4 pr-6 sm:w-1/2 sm:flex-none">
                    <img class="w-20 h-auto flex-none rounded-lg bg-gray-50" src="{{ asset('uploads/thumbnails/' ~ video.thumbnail) }}" alt="">
                    <div class="min-w-0 flex-auto">
                        <p class="text-sm font-semibold leading-6 text-gray-900">
                        <span class="absolute inset-x-0 -top-px bottom-0"></span>
                        {{ video.name  }}
                        </p>
                        <p class="mt-1 flex text-xs leading-5 text-gray-500">
                        {{ video.description|length > 100 ? video.description|slice(0, 100) ~ '...' : video.description }}
                        </p>
                    </div>
                    </div>
                    <div class="flex items-center justify-between gap-x-4 sm:w-1/2 sm:flex-none">
                    <svg class="h-5 w-5 flex-none text-gray-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                        <path fill-rule="evenodd" d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z" clip-rule="evenodd" />
                    </svg>
                    </div>
                </li>
            </a>
        {% endfor %}
    </ul>
</div>
{% endblock %}
 